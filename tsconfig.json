{
	"compilerOptions": {
		"target": "ESNext",
		"useDefineForClassFields": true,
		"lib": [
			"DOM",
			"DOM.Iterable",
			"ESNext"
		],
		"allowJs": false,
		"skipLibCheck": true,
		"esModuleInterop": false,
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"module": "ESNext",
		"moduleResolution": "Node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": true,
		"jsx": "react-jsx",
		"experimentalDecorators": true,
		"baseUrl": "src",
		"paths": {
			"@/assets/*": [
				"assets/*"
			],
			"@/components/*": [
				"components/*"
			],
			"@/data/*": [
				"data/*"
			],
			"@/helpers/*": [
				"helpers/*"
			],
			"@/stores/*": [
				"stores/*"
			],
			"@/style/*": [
				"components/style/*"
			],
			"@/utils/*": [
				"components/utils/*"
			]
		},
	},
	"include": [
		"src"
	],
	"references": [
		{
			"path": "./tsconfig.node.json"
		}
	]
}